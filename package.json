{
  "name": "vue-electron-recorder",
  "version": "0.0.1",
  "private": true,
  "description": "An audio recorder using RecordRTC, Electron and Vue. It records audio and saves it to the computer.",
  "author": {
    "name": "Maarten Coppens",
    "email": "martinuske@gmail.com"
  },
  "scripts": {
    "serve": "vue-cli-service serve",
    "electron:build": "vue-cli-service electron:build",
    "electron:serve": "vue-cli-service electron:serve",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps",
    "lint": "eslint --ext .js,.vue src",
    "lint:fix": "npm run lint:js & npm run lint:scss",
    "lint:js": "eslint --ext .js,.vue src --fix",
    "lint:scss": "prettier --write src/*",
    "build": "npm run build:windows && npm run build:linux",
    "build:windows": "npm run electron:build -- --win nsis",
    "build:mac": "npm run electron:build -- --mac",
    "build:linux": "npm run electron:build -- --linux deb --linux appimage --linux snap"
  },
  "main": "background.js",
  "dependencies": {
    "@jamescoyle/vue-icon": "^0.1.0",
    "@mdi/js": "^5.9.55",
    "core-js": "^3.8.3",
    "pug": "^3.0.0",
    "pug-plain-loader": "^1.1.0",
    "recordrtc": "^5.6.1",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.0",
    "@vue/cli-plugin-eslint": "^4.5.0",
    "@vue/cli-service": "^4.5.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "electron": "^11.0.0",
    "electron-devtools-installer": "^3.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-vue": "^6.2.2",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "vue-cli-plugin-electron-builder": "^2.0.0-rc.6",
    "vue-template-compiler": "^2.6.11"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,vue}": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
